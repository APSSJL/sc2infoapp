<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPostCategory"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="Post Title" />

        <TextView
            android:id="@+id/tvPostContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dvPostTitleAndAuthorLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            tools:text="Content\nLongLineTest\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nend" />

        <TextView
            android:id="@+id/tvPostCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Category" />

        <TextView
            android:id="@+id/tvPostAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPostTitle"
            android:layout_marginTop="5dp"
            tools:text="Author" />

        <Button
            android:id="@+id/btnCommentPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPostContent"
            android:layout_marginTop="15dp"
            android:text="Comment" />

        <View
            android:id="@+id/dvPostTitleAndAuthorLabel"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvPostAuthor"
            android:layout_alignParentStart="true"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

</ScrollView>