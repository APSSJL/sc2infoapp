<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVersus"
        android:text="vs Skillous"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        android:layout_centerInParent="true"
        android:text="4/1/2021 08.08"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/tvVersus"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnBet1"
        android:layout_alignParentEnd="true"
        android:text="p1"
        android:textAllCaps="false"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:id="@+id/btnBet2"
        android:layout_toLeftOf="@+id/btnBet1"
        android:layout_height="40dp"
        android:text="p2"
        android:textAllCaps="false"
        />

    <ProgressBar
        android:id="@+id/pbChances"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBet1"
        />
</RelativeLayout>